<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/my_green"
    tools:context=".FragmentStart">

    <TextView
        android:id="@+id/txt"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent"
        android:text="skuter-online uz orqali uyingizdan chiqmagan holda oling va soting"
        android:layout_marginHorizontal="@dimen/_7sdp"
        android:layout_marginVertical="@dimen/_10sdp"
        android:textColor="@color/my_red"
        android:textStyle="bold"
        android:textSize="@dimen/_12ssp"
        android:textAllCaps="true"
        android:lines="2"
        android:textAlignment="center"
        />

    <ImageView
        android:id="@+id/logo"
        android:layout_width="match_parent"
        android:layout_height="@dimen/_250sdp"
        android:src="@drawable/logo"
        app:layout_constraintTop_toBottomOf="@id/txt"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginTop="@dimen/_10sdp"
        />

     <soup.neumorphism.NeumorphCardView
         android:id="@+id/btn_sotib_olish"
         android:layout_width="match_parent"
         android:layout_height="wrap_content"
         app:layout_constraintTop_toBottomOf="@id/logo"
         app:neumorph_backgroundColor="@color/my_red"
         android:layout_marginHorizontal="@dimen/_20sdp"

         app:neumorph_shadowColorLight="@color/my_green"
         app:neumorph_shadowColorDark="@color/black"

         app:neumorph_shadowElevation="@dimen/_3sdp"

         >
         <TextView
             android:layout_width="match_parent"
             android:layout_height="match_parent"
             android:text="sotib olish"
             android:textAlignment="center"
             android:textSize="@dimen/_15ssp"
             android:textColor="@color/white"
             android:textStyle="bold"
             android:textAllCaps="true"
             android:paddingVertical="@dimen/_5sdp"

             />


     </soup.neumorphism.NeumorphCardView>
    <soup.neumorphism.NeumorphCardView
         android:id="@+id/btn_xamkorlar"
         android:layout_width="match_parent"
         android:layout_height="wrap_content"
         app:layout_constraintTop_toBottomOf="@id/btn_sotib_olish"
         app:neumorph_backgroundColor="@color/my_red"
         android:layout_marginHorizontal="@dimen/_20sdp"
        android:layout_marginTop="@dimen/_10sdp"
         app:neumorph_shadowColorLight="@color/my_green"
         app:neumorph_shadowColorDark="@color/black"

         app:neumorph_shadowElevation="@dimen/_3sdp"

         >
         <TextView
             android:layout_width="match_parent"
             android:layout_height="match_parent"
             android:text="skuter sotish"
             android:textAlignment="center"
             android:textSize="@dimen/_15ssp"
             android:textColor="@color/white"
             android:textStyle="bold"
             android:textAllCaps="true"
             android:paddingVertical="@dimen/_5sdp"

             />


     </soup.neumorphism.NeumorphCardView>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_margin="@dimen/_10sdp"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        >
        <ImageView
            android:id="@+id/img_telegram"
            android:layout_width="@dimen/_25sdp"
            android:layout_height="@dimen/_25sdp"
            android:src="@drawable/telegram_icon"
            android:layout_marginRight="@dimen/_5sdp"
            />


        <ImageView
            android:id="@+id/img_instagram"
            android:layout_width="@dimen/_25sdp"
            android:layout_height="@dimen/_25sdp"
            android:src="@drawable/instagram_icon"
            android:layout_marginHorizontal="@dimen/_5sdp"
            />

                <ImageView
            android:id="@+id/img_youtube"
            android:layout_width="@dimen/_30sdp"
            android:layout_height="@dimen/_30sdp"
            android:src="@drawable/youtube_icon"
            android:layout_marginLeft="@dimen/_5sdp"
            />


        <View
            android:layout_width="0dp"
            android:layout_height="1dp"
            android:layout_weight="1"
            />
        <ImageView
            android:id="@+id/info"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/info"
            />




    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/xira"
        android:background="#80000000"
        android:visibility="invisible"
        />


</androidx.constraintlayout.widget.ConstraintLayout>